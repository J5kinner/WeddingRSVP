generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum GuestStatus {
  ATTENDING
  NOT_ATTENDING
  UNSELECTED
}

model Invite {
  id         String   @id @default(cuid())
  inviteCode String   @unique
  message    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  guests     Guest[]

  @@index([inviteCode])
  @@map("invites")
}

model Guest {
  id        String   @id @default(cuid())
  inviteId  String
  name      String
  status    GuestStatus @default(UNSELECTED)
  dietNotes String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  invite    Invite   @relation(fields: [inviteId], references: [id], onDelete: Cascade)

  @@index([inviteId])
  @@index([status])
  @@map("guests")
}
